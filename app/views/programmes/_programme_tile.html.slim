- photo ||= true

.programme-timeline-tile
  .programme--icon = image_tag "icon-#{programme.category}.png"
  .programme--details
    .programme--category = programme.category.humanize
    .programme--title = link_to programme.title, programme
    .programme--speaker
      ' By
      - speaker_links = programme.speakers.map { |s| link_to s.name, s }
      == speaker_links.to_sentence

